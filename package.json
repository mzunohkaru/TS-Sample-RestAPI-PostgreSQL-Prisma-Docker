{
  "name": "ts-psgl-prisma",
  "version": "1.0.0",
  "description": "`pnpm init`",
  "main": "index.js",
  "scripts": {
    "dev:express": "nodemon",
    "dev:hono": "nodemon --legacy-watch --exec \"node --loader ts-node/esm\" src/hono/index.ts",
    "build": "tsc",
    "start": "node dist/express/index.js",
    "start:hono": "node dist/hono/index.js",
    "db:init": "prisma init",
    "db:migrate": "read -p 'マイグレーション名を入力してください: ' migration_name && npx prisma migrate dev --name \"$migration_name\"",
    "db:generate": "npx prisma generate",
    "db:deploy": "npx prisma migrate deploy",
    "db:deploy:docker": "npx prisma migrate deploy",
    "db:push": "npx prisma db push",
    "db:push:docker": "npx prisma db push",
    "db:create-view": "npx prisma migrate dev --create-only",
    "db:pull": "npx prisma db pull",
    "db:seed": "ts-node prisma/seed.ts",
    "db:seed:docker": "npx ts-node prisma/seed.ts",
    "studio": "npx prisma studio",
    "studio:docker": "prisma studio",
    "watch": "npx tsc --watch",
    "docker:up": "docker-compose -f docker-compose.local.yaml up -d",
    "docker:down": "docker-compose -f docker-compose.local.yaml down",
    "docker:logs": "docker-compose -f docker-compose.local.yaml logs -f",
    "docker:rebuild": "docker-compose -f docker-compose.local.yaml up -d --build --force-recreate",
    "docker:exec": "docker exec -it ts-sample-restapi-postgresql-prisma-docker-app-1 /bin/sh",
    "docker:db:deploy": "docker exec ts-sample-restapi-postgresql-prisma-docker-app-1 npm run db:deploy:docker",
    "docker:db:seed": "docker exec ts-sample-restapi-postgresql-prisma-docker-app-1 npm run db:seed:docker",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hono/node-server": "^1.11.1",
    "@hono/zod-validator": "^0.2.1",
    "@prisma/client": "^5.14.0",
    "@types/uuid": "^10.0.0",
    "axios": "^1.7.2",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-validator": "^7.0.1",
    "hono": "^4.3.9",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^11.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.12.11",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "nodemon": "^3.1.0",
    "prisma": "^5.14.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
