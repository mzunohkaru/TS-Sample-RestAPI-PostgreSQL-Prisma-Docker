{
  "name": "ts-psgl-prisma",
  "version": "1.0.0",
  "description": "`pnpm init`",
  "main": "index.js",
  "scripts": {
    "start:express": "nodemon --legacy-watch src/express/index.ts",
    "start:hono": "nodemon --legacy-watch src/hono/index.ts",
    "db:init": "prisma init",
    "db:migrate": "npx prisma migrate dev --name <migration-name>",
    "db:generate": "npx prisma generate",
    "db:deploy": "npx prisma migrate deploy",
    "db:create-view": "npx prisma migrate dev --create-only",
    "db:pull": "npx prisma db pull",
    "studio": "prisma studio",
    "watch": "npx tsc --watch",
    "seed": "ts-node prisma/seed.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hono/node-server": "^1.11.1",
    "@hono/zod-validator": "^0.2.1",
    "@prisma/client": "^5.14.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-validator": "^7.0.1",
    "hono": "^4.3.9",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.11",
    "nodemon": "^3.1.0",
    "prisma": "^5.14.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
