{
  "name": "ts-psgl-prisma",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev:express": "nodemon",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:init": "prisma init",
    "db:migrate": "read -p 'マイグレーション名を入力してください: ' migration_name && npx prisma migrate dev --name \"$migration_name\"",
    "db:generate": "npx prisma generate",
    "db:deploy": "npx prisma migrate deploy",
    "db:seed": "npx ts-node prisma/seed.ts",
    "db:seed:docker": "npx ts-node prisma/seed.ts",
    "watch": "npx tsc --watch",
    "docker:up": "docker-compose -f docker-compose.local.yaml up -d",
    "docker:down": "docker-compose -f docker-compose.local.yaml down",
    "docker:logs": "docker-compose -f docker-compose.local.yaml logs -f",
    "docker:rebuild": "docker-compose -f docker-compose.local.yaml up -d --build --force-recreate",
    "docker:exec": "docker exec -it ts-sample-restapi-postgresql-prisma-docker-app-1 /bin/sh",
    "docker:db:deploy": "docker exec ts-sample-restapi-postgresql-prisma-docker-app-1 npx prisma migrate deploy",
    "docker:db:seed": "docker exec ts-sample-restapi-postgresql-prisma-docker-app-1 npm run db:seed:docker",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json}\"",
    "type-check": "tsc --noEmit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.14.0",
    "@types/cors": "^2.8.19",
    "@types/helmet": "^0.0.48",
    "@types/uuid": "^10.0.0",
    "axios": "^1.7.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-validator": "^7.0.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^11.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.12.11",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.5.3",
    "prisma": "^5.14.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
